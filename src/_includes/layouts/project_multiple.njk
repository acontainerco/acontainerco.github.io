{%- include "partials/head.njk" -%}
  {%- include "partials/menu.njk" -%}
  <style>
    .content img {
      max-width: 100%;
    }
  </style>
  <section>
  <div class = "content" style = "display: unset;">
    <div id = "details" class = "featured">
      <h2> {{ title }} </h2>
      <h3> {{ author }} </h3>
      {%- if sold_out -%}
        <p>Sold out</p>
      {%- else -%}
        <p> ${{ price }}</p>
        <div id = "shipping">
          <ul>
            <li> Shipping (US): ${{ shipping_us }} </li>
            <li> Shipping (International): ${{ shipping_intl }} </li>
          </ul>
        </div>
      {%- endif -%}
      <h4>About</h4>
      <p style = "margin-bottom: 1vw;"> {{ summary }} </p>
      <p> {{ production_details }} </p>
      {%- if not sold_out -%}
        <p class = "button"><a href = "{{ shop }}" target = "_blank">Purchase ‚ü∂</a></p>
      {%- endif -%}
    </div>
    <div id = "masonry">
        {%- for image in images -%}
          <div>
            <a href = "/img/projects/{{slug}}/{{image.name}}" data-lightbox="gallery">
                {% image
                    "projects/" + slug,
                    image.name,
                    image.alt
                %}
            </a>
          </div>
        {%- endfor -%}
    </div>
   </div>
  </section>
  <section>
    <div class = "content" style = "display: unset;">
        {% for entry, data in _series_data %}
          {% if slug == data.series %}
              <h2 id = "{{ createAnchorTag(data.title) }}">{{ data.title }}</h2>
                <div class = "glide" style = "margin: 0 auto;">
                <div class = "glide__track" data-glide-el="track">
                    <ul class = "glide__slides">
                        {% for image in data.images %}
                          <li class = "glide__slide">
                                {% image
                                    "projects/" + slug,
                                    image,
                                    image.alt
                                %}
                          </li>
                        {% endfor %}
                    </ul>
                </div>
                </div>
              {{ data.description | markdown | safe }}
            {% set multiple = isMultipleArtists(data.artists) %}
            <h3>About the artist{% if multiple %}s{% endif %}</h3>
            <div {% if multiple %}class = "content"{%endif%}>
            {% for artist in data.artists %}
              <div class = "project-2-up">
                <h4 style = "column-span: unset;">{{ artist.name }}</h4>
                {% if not multiple %}
                  <div class = "single-contributor" {% if not artist.image %} style = "display: block;" {% endif %}>
                {% endif %}
                  {% image
                      "people",
                      artist.image,
                      image.alt
                  %}
                <div>{{ artist.bio | markdown | safe }}</div>
                {% if not multiple %}
                  </div>
                {% endif %}
                {% if not mulitple  %} <div style = "clear: both"></div> {% endif %}
              </div>
            {% endfor %}
            </div>
          {% endif %}
        {% endfor %}
    </div>
  </section>
{%- include "partials/footer.njk" -%}
