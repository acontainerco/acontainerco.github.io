{%- include "partials/head.njk" -%}
  {%- include "partials/menu.njk" -%}
  <section>
  <div class = "content" style = "display: unset;">
    <div id = "details" class = "featured">
      <h2> {{ title }} </h2>
      <h3> {{ author }} </h3>
      {%- if sold_out -%}
        <p>Sold out</p>
      {%- else -%}
        <p> ${{ price }}</p>
        <div id = "shipping">
          <ul>
            <li> Shipping (US): ${{ shipping_us }} </li>
            <li> Shipping (International): ${{ shipping_intl }} </li>
          </ul>
        </div>
      {%- endif -%}
      <h4>About</h4>
      <p style = "margin-bottom: 1vw;"> {{ summary }} </p>
      <p> {{ production_details }} </p>
      {%- if not sold_out -%}
        <p class = "button"><a href = "{{ shop }}" target = "_blank">Purchase ‚ü∂</a></p>
      {%- endif -%}
    </div>
    <div id = "masonry">
        {%- for image in images -%}
          <div>
            <a href = "/img/projects/{{slug}}/{{image.name}}" data-lightbox="gallery">
                {% image
                    "projects/" + slug,
                    image.name,
                    image.alt
                %}
            </a>
          </div>
        {%- endfor -%}
    </div>
   </div>
  </section>
  <section>
    <div class = "content" style = "display: unset;">
        {% for entry, data in _series_data %}
          {% if slug == data.series %}
              <h2>{{ data.title }}</h2>
              <div id = "masonry" style = "margin: 0 auto">
                {% for image in data.images %}
                  <div>
                    <a href = "/img/projects/{{slug}}/{{image}}" data-lightbox="gallery">
                        {% image
                            "projects/" + slug,
                            image,
                            image.alt
                        %}
                    </a>
                  </div>
                {% endfor %}
              </div>
              {{ data.description | markdown | safe }}
            <h3>About the artist{% if isMultipleArtists(data.artists) %}s{% endif %}</h3>
            <div {% if isMultipleArtists(data.artists) %}class = "content"{%endif%}>
            {% for author in data.artists %}
              <div class = "project-2-up">
                <h4 style = "column-span: unset;">{{author}}</h4>
                {% for bio in data.artist_bios %}
                  {% for name, text in bio %}
                    {% if name == author %} 
                      {{ text | markdown | safe }}
                    {% endif %}
                  {% endfor %}
                {% endfor %}
              </div>
            {% endfor %}
            </div>
          {% endif %}
        {% endfor %}
    </div>
  </section>
{%- include "partials/footer.njk" -%}
